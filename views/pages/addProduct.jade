extends ../layout

block content
	.container
		.row
			.col-sm-6.col-sm-offset-3
				form#form
					div.form-group
						label(for="name") 商品名称
						input.form-control(type="text",id="name",name="name",placeholder="请输入商品名称")
					div.form-group
						label(for="price") 商品价格
						input.form-control(type="text",id="price",name="price",placeholder="请输入商品价格")
					div.form-group
						input.btn.btn-success.form-control#add(type="button",value="添加")
	script(src="/js/addProduct.js")